# 数据库配置
# Prisma 数据库连接 URL
DATABASE_URL="postgresql://username:password@localhost:5432/stockai?schema=public"

# API 密钥配置
# Finnhub API 密钥
FINNHUB_API_KEY="your_finnhub_api_key"

# 应用程序配置
# 应用程序运行端口
PORT=3000
# 应用程序环境 (development/production)
NODE_ENV="development"
# API 基础 URL
API_BASE_URL="http://localhost:3000"

# Python 配置
# Python 虚拟环境路径
PYTHON_VENV_PATH=".venv"
# Python 脚本超时时间（秒）
PYTHON_SCRIPT_TIMEOUT=300

# 数据获取配置
# 股票数据更新间隔（分钟）
STOCK_UPDATE_INTERVAL=15
# 历史数据获取天数
HISTORICAL_DATA_DAYS=365

# 日志配置
# 日志级别 (debug/info/warn/error)
LOG_LEVEL="info"
# 日志文件路径
LOG_FILE_PATH="logs/app.log"

# 缓存配置
# Redis 连接 URL（可选）
REDIS_URL="redis://localhost:6379"
# 缓存过期时间（秒）
CACHE_TTL=3600

# 安全配置
# JWT 密钥
JWT_SECRET="your_jwt_secret_key"
# API 请求速率限制（每分钟请求数）
RATE_LIMIT=100

# 开发工具配置
# 是否启用调试模式
DEBUG=true
# 是否启用 API 文档
ENABLE_SWAGGER=true
# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=false 