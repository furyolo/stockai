generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsStocksName {
  name                 String    // 英文名称
  cname                String?   // 中文名称 (可能为空)
  symbol               String    @id // 股票代码 (主键)
  fetchedAt            DateTime  @default(now()) // 数据获取时间
  updatedAt            DateTime  @updatedAt // Prisma自动管理的更新时间

  @@map("us_stocks_name") // 将模型映射到数据库表 us_stocks_name
}

model StockSymbol {
  currency        String?
  description     String?
  displaySymbol   String
  figi            String?
  mic             String?
  shareClassFIGI  String?
  symbol          String    @id
  type            String?
  fetchedAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("stock_symbols")
}
